<Page x:Class="CourseWork.Teacher.TeacherOverviewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CourseWork.Teacher"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TeacherOverviewPage">
    <Grid Style="{StaticResource GridTabStyle}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="32" />
                    <ColumnDefinition Width="16" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="16" />
                    <ColumnDefinition Width="32" />
                    <ColumnDefinition Width="8" />
                    <ColumnDefinition Width="32" />
                </Grid.ColumnDefinitions>

                <Button
                    Grid.Column="0"
                    Style="{StaticResource ButtonIconLargeStyle}"
                    Click="ButtonBack_Click"
                    VerticalAlignment="Center">
                    <Image 
                        Style="{StaticResource ImageIconLarge}" 
                        Source="/Assets/Icons/ic_back.png" />
                </Button>

                <TextBlock
                    Style="{StaticResource TextBlockTitleStyle}"
                    Grid.Column="2"
                    Text="Вчитель"
                    HorizontalAlignment="Left"/>

                <Button
                    Grid.Column="4"
                    Style="{StaticResource ButtonIconLargeStyle}"
                    VerticalAlignment="Center"
                    Click="ButtonEdit_Click">
                    <Image 
                        Style="{StaticResource ImageIconMedium}" 
                        Source="/Assets/Icons/ic_edit.png" />
                </Button>

                <Button
                    Grid.Column="6"
                    Style="{StaticResource ButtonIconLargeStyle}"
                    VerticalAlignment="Center"
                    Click="ButtonDelete_Click">
                    <Image 
                        Style="{StaticResource ImageIconMedium}" 
                        Source="/Assets/Icons/ic_delete.png" />
                </Button>
            </Grid>

            <StackPanel Margin="0 12 0 0">
                <StackPanel
                    Orientation="Horizontal">
                    <TextBlock
                        Style="{StaticResource TextBlockRowLabelStyle}"
                        Text="Ім'я:" />
                    <TextBlock
                        Style="{StaticResource TextBlockRowTextStyle}"
                        x:Name="TextBlockFirstName" />
                </StackPanel>
                <StackPanel
                    Style="{StaticResource StackPanelRowStyle}"
                    Orientation="Horizontal">
                    <TextBlock
                        Style="{StaticResource TextBlockRowLabelStyle}"
                        Text="Прізвище:"/>
                    <TextBlock
                        Style="{StaticResource TextBlockRowTextStyle}"
                        x:Name="TextBlockLastName" />
                </StackPanel>
                <StackPanel
                    Style="{StaticResource StackPanelRowStyle}"
                    Orientation="Horizontal">
                    <TextBlock
                        Style="{StaticResource TextBlockRowLabelStyle}"
                        Text="По батькові:"/>
                    <TextBlock
                        Style="{StaticResource TextBlockRowTextStyle}"
                        x:Name="TextBlockSurname"/>
                </StackPanel>

                <StackPanel 
                    Style="{StaticResource StackPanelRowStyle}"
                    Orientation="Horizontal">
                    <TextBlock
                        Style="{StaticResource TextBlockRowLabelStyle}"
                        Text="Посада:" />
                    <TextBlock
                        Style="{StaticResource TextBlockRowTextStyle}"
                        x:Name="TextBlockPosition"/>
                </StackPanel>
            </StackPanel>

            <Grid Margin="0 24 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="123"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock
                        Style="{StaticResource TextBlockLabelStyle}"
                        Text="Група"/>
                    <ComboBox x:Name="ComboBoxGroup" />
                </StackPanel>
                <StackPanel Grid.Column="2">
                    <TextBlock
                        Style="{StaticResource TextBlockLabelStyle}"
                        Text="Дисципліна"/>
                    <ComboBox x:Name="ComboBoxDiscipline" />
                </StackPanel>
                <Button
                    Grid.Column="4"
                    Content="Відчистити"
                    VerticalAlignment="Bottom"
                    Click="ButtonClear_Click"/>
                <Button
                    Grid.Column="6"
                    Content="Пошук"
                    VerticalAlignment="Bottom"
                    Click="ButtonSearch_Click"/>
            </Grid>
        </StackPanel>

        <ScrollViewer
            Grid.Row="1"
            Margin="0,12,0,0"
            VerticalScrollBarVisibility="Auto">

            <DataGrid
                x:Name="DataGrid"
                AutoGenerateColumns="False"
                IsReadOnly="True"
                VerticalAlignment="Top">
                <DataGrid.Columns>
                    <DataGridTextColumn 
                        ElementStyle="{StaticResource DataGridTextColumnVertical}"
                        Header="Група"
                        Binding="{Binding Group}"
                        Width="100"/>
                    <DataGridTextColumn
                        ElementStyle="{StaticResource DataGridTextColumnVertical}"
                        Header="Дисципліна"
                        Binding="{Binding Discipline}"
                        MinWidth="160"
                        Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </ScrollViewer>
    </Grid>
</Page>
