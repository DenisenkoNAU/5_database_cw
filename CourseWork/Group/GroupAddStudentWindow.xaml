<Window x:Class="CourseWork.Group.GroupAddStudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseWork.Group"
        mc:Ignorable="d"
        Style="{StaticResource WindowSyle}"
        Icon="/Assets/Icons/icon.ico"
        Title="Заклад вищої освіти"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Width="320">
    <StackPanel Style="{StaticResource StackPanelTabStyle}">
        <TextBlock
                Style="{StaticResource TextBlockModalTitleStyle}"
                x:Name="TextBlockTitle"
                Text="Додати студента"
                HorizontalAlignment="Center"/>
        <StackPanel Margin="0 24 0 0">
            <TextBlock
                Style="{StaticResource TextBlockLabelStyle}"
                Text="Студент"/>
            <ComboBox />
        </StackPanel>
        <StackPanel Margin="0 24 0 0">
            <Button
                x:Name="ButtonAction"
                Content="Додати"
                HorizontalAlignment="Center"
                Click="ButtonAction_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
