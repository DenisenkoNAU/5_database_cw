<Page x:Class="CourseWork.Group.GroupPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CourseWork.Group"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GroupPage">
    <Grid Style="{StaticResource GridTabStyle}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="16" />
                    <ColumnDefinition Width="100" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Style="{StaticResource TextBlockTitleStyle}"
                    Grid.Column="0"
                    Text="Групи"
                    HorizontalAlignment="Left"/>
                <Button
                    Grid.Column="2"
                    Content="Створити"
                    VerticalAlignment="Center"
                    Click="ButtonCreate_Click"/>
            </Grid>
            <Grid Margin="0 24 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock
                        Style="{StaticResource TextBlockLabelStyle}"
                        Text="Спеціальність"/>
                    <ComboBox x:Name="ComboBoxSpeciality" />
                </StackPanel>
                <StackPanel Grid.Column="2">
                    <TextBlock
                        Style="{StaticResource TextBlockLabelStyle}"
                        Text="Пошук по коду групи"/>
                    <TextBox x:Name="TextBoxSearch" />
                </StackPanel>
                <Button
                    Grid.Column="4"
                    Content="Відчистити"
                    VerticalAlignment="Bottom"
                    Click="ButtonClear_Click"/>
                <Button
                    Grid.Column="6"
                    Content="Пошук"
                    VerticalAlignment="Bottom"
                    Click="ButtonSearch_Click"/>
            </Grid>
        </StackPanel>

        <ScrollViewer
            Grid.Row="1"
            Margin="0,12,0,0"
            VerticalScrollBarVisibility="Auto">

            <DataGrid
                x:Name="DataGrid"
                AutoGenerateColumns="False"
                IsReadOnly="True"
                VerticalAlignment="Top">
                <DataGrid.Columns>
                    <DataGridTemplateColumn
                        Header="Дія"
                        MinWidth="86"
                        Width="86">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button
                                        Style="{StaticResource ButtonIconStyle}"
                                        Margin="2"
                                        Click="ButtonView_Click">
                                        <Image 
                                            Style="{StaticResource ImageIcon}"
                                            Source="/Assets/Icons/ic_view.png" />
                                    </Button>
                                    <Button
                                        Style="{StaticResource ButtonIconStyle}"
                                        Margin="2"
                                        Click="ButtonEdit_Click">
                                        <Image 
                                            Style="{StaticResource ImageIcon}"
                                            Source="/Assets/Icons/ic_edit.png" />
                                    </Button>
                                    <Button
                                        Style="{StaticResource ButtonIconStyle}"
                                        Margin="2"
                                        Click="ButtonDelete_Click">
                                        <Image 
                                            Style="{StaticResource ImageIcon}"
                                            Source="/Assets/Icons/ic_delete.png" />
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn
                        ElementStyle="{StaticResource DataGridTextColumnVertical}"
                        Header="Код"
                        Binding="{Binding Code}"
                        Width="100"/>
                    
                    <DataGridTextColumn
                        ElementStyle="{StaticResource DataGridTextColumnVertical}"
                        Header="Спеціальність"
                        Binding="{Binding Speciality}"
                        MinWidth="160"
                        Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </ScrollViewer>
    </Grid>
</Page>
