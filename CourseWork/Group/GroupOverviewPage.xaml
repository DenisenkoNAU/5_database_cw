<Page x:Class="CourseWork.Group.GroupOverviewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CourseWork.Group"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GroupOverviewPage">
    <Grid Style="{StaticResource GridTabStyle}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="32" />
                    <ColumnDefinition Width="16" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="16" />
                    <ColumnDefinition Width="32" />
                    <ColumnDefinition Width="8" />
                    <ColumnDefinition Width="32" />
                </Grid.ColumnDefinitions>

                <Button
                    Grid.Column="0"
                    Style="{StaticResource ButtonIconLargeStyle}"
                    Click="ButtonBack_Click"
                    VerticalAlignment="Center">
                    <Image 
                        Style="{StaticResource ImageIconLarge}" 
                        Source="/Assets/Icons/ic_back.png" />
                </Button>

                <TextBlock
                    Style="{StaticResource TextBlockTitleStyle}"
                    Grid.Column="2"
                    Text="Група"
                    HorizontalAlignment="Left"/>

                <Button
                    Grid.Column="4"
                    Style="{StaticResource ButtonIconLargeStyle}"
                    VerticalAlignment="Center"
                    Click="ButtonEdit_Click">
                    <Image 
                        Style="{StaticResource ImageIconMedium}" 
                        Source="/Assets/Icons/ic_edit.png" />
                </Button>

                <Button
                    Grid.Column="6"
                    Style="{StaticResource ButtonIconLargeStyle}"
                    VerticalAlignment="Center"
                    Click="ButtonDelete_Click">
                    <Image 
                        Style="{StaticResource ImageIconMedium}" 
                        Source="/Assets/Icons/ic_delete.png" />
                </Button>
            </Grid>

            <StackPanel Margin="0 12 0 0">
                <StackPanel
                    Orientation="Horizontal">
                    <TextBlock
                        Style="{StaticResource TextBlockRowLabelStyle}"
                        Text="Код"/>
                    <TextBlock
                        Style="{StaticResource TextBlockRowTextStyle}"
                        x:Name="TextBlockCode"/>
                </StackPanel>
                <StackPanel
                    Style="{StaticResource StackPanelRowStyle}"
                    Orientation="Horizontal">
                    <TextBlock
                        Style="{StaticResource TextBlockRowLabelStyle}"
                        Text="Спеціальність:"/>
                    <TextBlock
                        Style="{StaticResource TextBlockRowTextStyle}"
                        x:Name="TextBlockSpeciality"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <ScrollViewer
            Grid.Row="1"
            Margin="0,16,0,0"
            VerticalScrollBarVisibility="Auto">

            <StackPanel Margin="0,8,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="16" />
                        <ColumnDefinition Width="160" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Style="{StaticResource TextBlockSubTitleStyle}"
                        Grid.Column="0"
                        Text="Дисципліни"
                        HorizontalAlignment="Left"/>
                    <Button
                        Grid.Column="2"
                        Content="Додати дисципліну"
                        VerticalAlignment="Center"
                        Click="ButtonAddDiscipline_Click"/>
                </Grid>
                <Grid Margin="0 12 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="260"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <TextBlock
                            Style="{StaticResource TextBlockLabelStyle}"
                            Text="Вчитель"/>
                        <ComboBox x:Name="ComboBoxTeacher"/>
                    </StackPanel>
                    <StackPanel Grid.Column="2">
                        <TextBlock
                            Style="{StaticResource TextBlockLabelStyle}"
                            Text="Пошук по дисципліні"/>
                        <TextBox x:Name="TextBoxSearchDiscipline" />
                    </StackPanel>
                    <Button
                        Grid.Column="4"
                        Content="Відчистити"
                        VerticalAlignment="Bottom"
                        Click="ButtonClearSearchDiscipline_Click"/>
                    <Button
                        Grid.Column="6"
                        Content="Пошук"
                        VerticalAlignment="Bottom"
                        Click="ButtonSearchDiscipline_Click"/>
                </Grid>
                <DataGrid
                    x:Name="DataGridDiscipline"
                    Margin="0,12,0,0"
                    AutoGenerateColumns="False"
                    IsReadOnly="True"
                    VerticalAlignment="Top">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn
                            Header="Дія"
                            MinWidth="30"
                            Width="30">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button
                                            Style="{StaticResource ButtonIconStyle}"
                                            Margin="2"
                                            Click="ButtonDeleteDiscipline_Click">
                                            <Image 
                                                Style="{StaticResource ImageIcon}"
                                                Source="/Assets/Icons/ic_delete.png" />
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn
                            ElementStyle="{StaticResource DataGridTextColumnVertical}"
                            Header="Дисципліна"
                            Binding="{Binding Discipline}"
                            MinWidth="160"
                            Width="*"/>
                        <DataGridTextColumn
                            ElementStyle="{StaticResource DataGridTextColumnVertical}"
                            Header="Вчитель"
                            Binding="{Binding Teacher}"
                            MinWidth="160"
                            Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>

                <Grid Margin="0 36 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="16" />
                        <ColumnDefinition Width="160" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Style="{StaticResource TextBlockSubTitleStyle}"
                        Grid.Column="0"
                        Text="Студенти"
                        HorizontalAlignment="Left"/>
                </Grid>
                <DataGrid
                    x:Name="DataGridStudent"
                    Margin="0,12,0,0"
                    AutoGenerateColumns="False"
                    IsReadOnly="True"
                    VerticalAlignment="Top">
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            ElementStyle="{StaticResource DataGridTextColumnVertical}"
                            Header="Ім'я"
                            Binding="{Binding FirstName}"
                            MinWidth="120"
                            Width="*"/>     
                        <DataGridTextColumn 
                            ElementStyle="{StaticResource DataGridTextColumnVertical}"
                            Header="Прізвище"
                            Binding="{Binding LastName}"
                            MinWidth="120"
                            Width="*"/>
                        <DataGridTextColumn 
                            ElementStyle="{StaticResource DataGridTextColumnVertical}"
                            Header="По батькові"
                            Binding="{Binding Surname}"
                            MinWidth="120"
                            Width="*"/>
                        <DataGridTextColumn
                            ElementStyle="{StaticResource DataGridTextColumnVertical}"
                            Header="Пошта"
                            Binding="{Binding Email}"
                            MinWidth="100"
                            Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
