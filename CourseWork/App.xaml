<Application x:Class="CourseWork.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CourseWork"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="WindowSyle" TargetType="Window">
            <Setter Property="Background" Value="#F2F8FF" />
        </Style>

        <Style TargetType="TabControl">
            <Setter Property="Background" Value="#F2F8FF" />
        </Style>

        <Style x:Key="StackPanelTabStyle" TargetType="StackPanel">
            <Setter Property="Margin" Value="12"/>
        </Style>

        <Style x:Key="StackPanelRowStyle" TargetType="StackPanel">
            <Setter Property="Margin" Value="0 6 0 0"/>
        </Style>

        <Style x:Key="GridTabStyle" TargetType="Grid">
            <Setter Property="Margin" Value="12"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Height" Value="24"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12 0 12 2"/>
        </Style>

        <Style x:Key="ButtonIconStyle" TargetType="Button">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Width" Value="24"/>
        </Style>

        <Style x:Key="ButtonIconLargeStyle" TargetType="Button">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Width" Value="32"/>
        </Style>

        <Style x:Key="ImageIcon" TargetType="Image" >
            <Setter Property="Width" Value="16" />
            <Setter Property="Height" Value="16" />
        </Style>

        <Style x:Key="ImageIconMedium" TargetType="Image" >
            <Setter Property="Width" Value="20" />
            <Setter Property="Height" Value="20" />
        </Style>

        <Style x:Key="ImageIconLarge" TargetType="Image" >
            <Setter Property="Width" Value="24" />
            <Setter Property="Height" Value="24" />
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Height" Value="24"/>
            <Setter Property="Padding" Value="4 2"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="24"/>
            <Setter Property="Padding" Value="4 2"/>
        </Style>

        <Style x:Key="TextBlockTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <Style x:Key="TextBlockSubTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <Style x:Key="TextBlockModalTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <Style x:Key="TextBlockLabelStyle" TargetType="TextBlock">
            <Setter Property="Margin" Value="0 0 0 4"/>
        </Style>

        <Style x:Key="TextBlockRowLabelStyle" TargetType="TextBlock">
            <Setter Property="Margin" Value="0 0 6 0"/>
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="FontSize" Value="14" />
        </Style>

        <Style x:Key="TextBlockRowTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14" />
        </Style>

        <Style x:Key="DataGridTextColumnVertical" TargetType="TextBlock" >
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Padding" Value="2" />
        </Style>

    </Application.Resources>
</Application>
